<% end %>

<% content_for(:precontainer_content) do %>
  <%= render 'hyrax/homepage/announcement' if controller_name == 'homepage' %>
<% end %>

<% content_for(:twitter_meta) do %>
  <meta name="twitter:card" content="product" />
  <meta name="twitter:site" content="<%= t('hyrax.product_twitter_handle') %>" />
  <meta name="twitter:image" content="<%= image_url('mdr-ogp.png') %>" />
  <meta property="og:site_name" content="<%= t('hyrax.product_name_full') %>" />
  <meta property="og:type" content="website" />
  <meta property="og:title" content="<%= t('hyrax.product_name_full') %>" />
  <meta property="og:description" content="MDR is a data repository to collect and store papers, presentation materials, and related materials data to accumulate and release them in a form suitable for the promotion of materials research and materials informatics." />
  <meta property="og:url" content="<%= main_app.root_url %>" />
  <meta property="og:image" content="<%= image_url('mdr-ogp.png') %>" />
<% end %>

<%= render template: 'layouts/hyrax' %>
